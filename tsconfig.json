{
  "include": [
    "./node_modules/@types/**/*.d.ts",
    "src/**/*.ts", 
    "env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "**/*.(spec|test).ts"
  ],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "rootDir": "./src",
    "moduleResolution": "node",
    "allowJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  }
}
